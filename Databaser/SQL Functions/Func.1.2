DROP FUNCTION IF EXISTS accumulator;
CREATE FUNCTION accumulator (prime decimal, n int, r decimal)
RETURNS decimal(10,2)
DETERMINISTIC
BEGIN
  DECLARE Kn decimal(10,2);
  SET Kn = prime*pow((1+r/100),n);
  RETURN Kn;
END;//
